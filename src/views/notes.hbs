<div>
  {{> navbar }}
  <div class="container pt-3">
    <div class="row gap-4">
    {{#if notes}}
      {{#each notes}}
      <div class="col-md-3 card">
        <div class="card-body d-flex justify-content-between flex-column">
        <div class="mb-1">
          <div class="d-flex justify-content-between">
          <h4 class="card-title">{{title}}</h4>
          <a href="/notes/edit/{{_id}}" class="link link-primary fs-5">Edit</a>
          </div>
          <p class="card-text">
            {{content}}
          </p>
        </div>
        <div class="d-grid gap-1">
          {{#if important}}
          <a class="btn btn-success" href="/notes/{{_id}}/toggle-important">Important</a>
          {{else}}
          <a class="btn btn-danger" href="/notes/{{_id}}/toggle-important">No important</a>
          {{/if}}
          <a href="/notes/delete/{{_id}}" class="btn btn-warning">Delete</a>
        </div>
        </div>
      </div>
      {{/each}}
      {{else}}
      <div class="alert alert-warning">
        No tienes ninguna nota ve a <a href="/notes/add" >ADD</a> para poder escribir tus notas
      </div>
    {{/if}}
    </div>
  </div>
</div>